@inherits WindowBase
@implements WindowParametersInterface

<p>Pos: (@TopStr, @LeftStr), size: (@HeightStr, @WidthStr)</p>
<TelerikWindow Visible="@Visible" Top="@TopStr" Left="@LeftStr" Height="@HeightStr" Width="@WidthStr" LeftChanged="@(s => WindowResized("L", $"{s}"))" HeightChanged="@(s => WindowResized("H", $"{s}"))" TopChanged="@(s => WindowResized("T", $"{s}"))" WidthChanged="@(s => WindowResized("W", $"{s}"))">
  <WindowActions>
    <WindowAction Name="Close" OnClick="@Close" />
  </WindowActions>
  <WindowTitle>Donors</WindowTitle>
  <WindowContent>
    <TelerikGrid Data="Donors"
                 Class="border-0">
      <GridColumns>
        <GridColumn Field="@nameof(Customer.Id)" Width="70px" />
        <GridColumn Field="@nameof(Customer.Name)" />
        <GridColumn Field="@nameof(Customer.Address)" />
      </GridColumns>
    </TelerikGrid>
  </WindowContent>
</TelerikWindow>

@code {

  private List<Customer> Donors { get; } = DataService.Customers.Take(20).ToList();

}